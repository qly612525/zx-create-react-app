{
  "name": "zx-create-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.0.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts-ts": "2.12.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "node_modules/.bin/lint-staged",
    "build-css": "node_modules/.bin/node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node_modules/.bin/node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "node_modules/.bin/react-scripts-ts start",
    "start": "node_modules/.bin/npm-run-all -p watch-css start-js",
    "build-js": "node_modules/.bin/react-scripts-ts build",
    "build": "node_modules/.bin/npm-run-all build-css build-js",
    "test": "node_modules/.bin/react-scripts-ts test --env=jsdom",
    "eject": "node_modules/.bin/react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3"
  }
}
